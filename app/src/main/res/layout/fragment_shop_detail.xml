<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".detail.ShopDetailFragment">

    <ImageView
        android:id="@+id/shopImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_shopName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/arthur"/>

    <TextView
        android:id="@+id/tv_shopName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/fira_sans_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopImage"
        android:padding="8dp"
        tools:text="ЭЛЬДОРАДО" />

    <TextView
        android:id="@+id/shopCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/fira_sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shopName"
        android:padding="8dp"
        tools:text="Бытовая техника и электроника" />

    <TextView
        android:id="@+id/shopLink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopCategory"
        android:padding="8dp"
        tools:text="eldorado.ru" />

    <TextView
        android:id="@+id/shopInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:fontFamily="@font/fira_sans"
        app:layout_constraintTop_toBottomOf="@id/shopLink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        tools:text="«Эльдорадо» представляет широкий ассортимент качественных товаров ведущих мировых брендов, который насчитывает свыше 20 000 наименований в 110 товарных группах..." />

</androidx.constraintlayout.widget.ConstraintLayout>
