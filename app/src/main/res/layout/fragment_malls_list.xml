<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottomnavigation.MallsListFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_text_input"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/input_search_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMall"
        android:layout_width="406dp"
        android:layout_height="633dp"
        android:layout_marginTop="56dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_text_input"
        app:layout_constraintVertical_bias="1.0"
        tools:itemCount="7"
        tools:layout_editor_absoluteX="5dp"
        tools:listitem="@layout/fragment_mall_detail"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivFilter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_text_input"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>