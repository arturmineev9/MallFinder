<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mallFragment">

    <fragment
        android:id="@+id/mallFragment"
        android:name="com.example.mallfinder.bottomnavigation.MallsListFragment"
        android:label="fragment_mall"
        tools:layout="@layout/fragment_malls_list" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.mallfinder.bottomnavigation.MapFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" >
        <action
            android:id="@+id/action_mapFragment_to_mallDetailFragment"
            app:destination="@id/mallDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.example.mallfinder.bottomnavigation.ShopsListFragment"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shops_list" />
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.mallfinder.bottomnavigation.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_infoFragment_to_developersFragment"
            app:destination="@id/developersFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/developersFragment"
        android:name="com.example.mallfinder.bottomnavigation.DevelopersFragment"
        android:label="fragment_developers"
        tools:layout="@layout/fragment_developers" />
    <fragment
        android:id="@+id/mallDetailFragment"
        android:name="com.example.mallfinder.detail.MallDetailFragment"
        android:label="fragment_mall_detail"
        tools:layout="@layout/fragment_mall_detail" >
        <action
            android:id="@+id/action_mallDetailFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_mallDetailFragment_to_shopDetailFragment"
            app:destination="@id/shopDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/shopDetailFragment"
        android:name="com.example.mallfinder.detail.ShopDetailFragment"
        android:label="fragment_shop_detail"
        tools:layout="@layout/fragment_shop_detail" />
</navigation>